@* Binding the Model with view  *@
@model CRUDInMVCFromScratch.Models.Employees

@{
    ViewData["Title"] = "Add";
}
<h1>Add Employees</h1>

<form asp-action="Add">
    <div class="form-horizontal">

        <div class="mt-3 form-group">
            <label class="control-label">FirstName</label>
            <input class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mt-3 form-group">
            <label class="control-label" asp-for="LastName">LastName</label>
            <input class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mt-3 form-group">
            <label class="control-label" asp-for="Email">Email</label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3 form-group">
            <label class="control-label" asp-for="Phone">Phone</label>
            <input class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class=" mt-3 form-group">
            <label class="control-label" asp-for="Position">Position</label>
            <input class="form-control" asp-for="Position" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class=" mt-3 form-group">
            <label class="control-label" asp-for="Salary">Salary</label>
            <input class="form-control" asp-for="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="mt-3 form-group">        
            <button type="submit" class="btn btn-primary" asp-for="FirstName">Add</button>        
        </div>
    </div>
</form>
